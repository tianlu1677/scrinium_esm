<ul class='left-side-list'>
  <li><%= model.short_name %></li>
  <li>
    <%= t('global.contact') %>:
    <%= link_to model.contact.name, model.contact %>
  </li>
  <li>
    <% if policy(model).update? %>
      <%= link_to fa_icon('edit', text: t('action.edit')), [ :edit, model ] %>
    <% end %>
    <% if policy(model).destroy? %>
      <%=
        link_to fa_icon('trash', text: t('action.delete')), model, method: :delete,
        data: { confirm: t('message.are_you_sure_to_delete?', thing: t('scrinium_esm.ocn_model')) }
      %>
    <% end %>
  </li>
</ul>
