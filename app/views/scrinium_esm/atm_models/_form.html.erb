<div class='model-form'>
  <%= simple_form_for @atm_model do |f| %>
    <div class='row'>
      <div class='col-md-4'>
        <dl>
          <dt><%= t('model.basic_info') %></dt>
          <dd>
            <%= f.input :name %>
            <%= f.input :short_name %>
            <%= f.input :repository_url %>
            <%= f.input :affiliation %>
            <div class='row'>
              <div class='col-md-4'>
                <%= f.input :simulation_region %>
              </div>
              <div class='col-md-4'>
                <%= f.input :simulation_type %>
              </div>
              <div class='col-md-4'>
                <%= f.input :contact_id,
                  collection: [ @atm_model.contact_id ],
                  input_html: { id: 'input-user-name' }
                %>
              </div>
            </div>
            <%= f.input :description, as: :text %>
          </dd>
        </dl>
      </div>
      <div class='col-md-4'>
        <dl>
          <dt><%= t('activerecord.attributes.scrinium_esm/atm_model.dynamical_core_scheme') %></dt>
          <dd>
            <%= f.input :dynamical_core_scheme %>
            <%= f.input :advection_scheme %>
            <div class='row'>
              <div class='col-md-6'>
                <%= f.input :is_hydrostatic %>
              </div>
              <div class='col-sm-6'>
                <%= f.input :is_shallow %>
              </div>
            </div>
            <div class='row'>
              <div class='col-md-6'>
                <%= f.input :horizontal_mesh %>
              </div>
              <div class='col-md-6'>
                <%= f.input :vertical_coordinate %>
              </div>
            </div>
          </dd>
        </dl>
      </div>
      <div class='col-md-4'>
        <dl>
          <dt><%= t('model.physics_parameterization') %></dt>
          <dd>
            <%= f.input :radiation_scheme %>
            <%= f.input :convection_scheme %>
            <%= f.input :microphysics_scheme %>
            <%= f.input :planet_boundary_layer_scheme %>
            <%= f.input :gravity_drag_scheme %>
          </dd>
        </dl>
      </div>
    </div>
    <%= f.button :submit, t('action.submit'), class: 'button float-right' %>
  <% end %>
</div>
