<% content_for :title, '模式' %>

<% content_for :main_block do %>
  <% if not @atm_models.empty? %>
    <dl>
      <dt><%= t('scrinium_esm.atm_model') %></dt>
      <dd>
        <%= render 'scrinium_esm/commons/model_list', models: @atm_models %>
        <% if policy(ScriniumEsm::AtmModel).create? %>
          <%= link_to t('action.add'), new_atm_model_path, class: 'button float-right' %>
        <% end %>
      </dd>
    </dl>
  <% end %>
  <% if not @ocn_models.empty? %>
    <dl>
      <dt><%= t('scrinium_esm.ocn_model') %></dt>
      <dd>
        <%= render 'scrinium_esm/commons/model_list', models: @ocn_models %>
        <% if policy(ScriniumEsm::OcnModel).create? %>
          <%= link_to t('action.add'), new_ocn_model_path, class: 'button float-right' %>
        <% end %>
      </dd>
    </dl>
  <% end %>
<% end %>
