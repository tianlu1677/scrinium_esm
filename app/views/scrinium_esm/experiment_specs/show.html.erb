<% content_for :title, @experiment_spec.short_name %>
<%
  add_breadcrumb @experiment_spec.short_name,
  [ scrinium_esm, @experiment_spec.comparison_project, @experiment_spec ]
%>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <%=
    render 'layouts/navtab',
    tabs: {
      info: [
        t('global.info'),
        render('info')
      ],
      resources: [
        t('scrinium.resource'),
        render('resources/list', resources: @experiment_spec.resources)
      ]
    }
  %>
<% end %>
