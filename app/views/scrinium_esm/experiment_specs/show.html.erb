<% content_for :title, @experiment_spec.short_name %>
<%
  add_breadcrumb @experiment_spec.short_name,
  [
    scrinium_esm,
    @experiment_spec.contact,
    @experiment_spec.comparison_project,
    @experiment_spec
  ]
%>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <%=
    render partial: 'layouts/navtab',
    locals: {
      tabs: {
        info: [
          t('global.info'),
          render('info')
        ],
        resources: [
          t('scrinium.resource'),
          render(partial: 'resources/table_list', locals: { app: scrinium_esm, resources: @experiment_spec.resources })
        ]
      }
    }
  %>
<% end %>
