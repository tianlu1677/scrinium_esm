<% content_for :title, @experiment_spec.short_name %>
<%
  add_breadcrumb @experiment_spec.short_name,
  [
    scrinium_esm,
    @experiment_spec.contact,
    @experiment_spec.comparison_project,
    @experiment_spec
  ]
%>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <div>
    <ul class='nav nav-tabs' role='tablist'>
      <li role='presentation' class='active'>
        <a href='#info' aria-controls='info' role='tab' data-toggle='tab' id='info'>
          <%= t('global.info') %>
        </a>
      </li>
      <li role='presentation'>
        <a href='#resources' aria-controls='resources' role='tab' data-toggle='tab' id='resources'>
          <%= t('scrinium.resource') %>
        </a>
      </li>
    </ul>
    <div class='tab-content'>
      <div role='tabpanel' class='tab-pane active' id='info'>
        <dl>
          <dt><%= t('global.basic_info') %></dt>
          <dd class='markdown'><%= @experiment_spec.description %></dd>
        </dl>
        <dl>
          <dt></dt>
          <dd>
            <%=
              render partial: 'comments/list',
              locals: {
                app: scrinium_esm,
                commentable: @experiment_spec
              }
            %>
          </dd>
        </dl>
      </div>
      <div role='tabpanel' class='tab-pane' id='resources'>
        <%=
          render partial: 'resources/table_list',
          locals: {
            app: scrinium_esm,
            resources: @experiment_spec.resources
          }
        %>
      </div>
    </div>
<% end %>
