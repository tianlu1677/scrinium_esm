<table class='table table-striped'>
  <thead>
    <tr>
      <th width="100"><%= t('global.short_name') %></th>
      <th width="300"><%= t('global.name') %></th>
      <th width="100"><%= t('global.contact') %></th>
      <th width="200"><%= t('global.create_time') %></th>
    </tr>
  </thead>
  <tbody>
    <% experiment_specs.each do |s| %>
      <tr>
        <td>
          <%= link_to s.short_name, [ scrinium_esm, s.contact, s.comparison_project, s ] %>
        </td>
        <td><%= s.name %></td>
        <td>
          <%= link_to s.contact.name, [ main_app, s.contact ] %>
        </td>
        <td><%= s.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
