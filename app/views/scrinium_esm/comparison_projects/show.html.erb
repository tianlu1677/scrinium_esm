<% content_for :title, @comparison_project.short_name %>
<% add_breadcrumb @comparison_project.short_name, [ scrinium_esm, @comparison_project ] %>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <%=
    render 'layouts/navtab',
    tabs: {
      info: [
        t('global.info'),
        render('info')
      ],
      experiment_specs: [
        t('activerecord.models.scrinium_esm/experiment_spec'),
        render('scrinium_esm/experiment_specs/table_list', experiment_specs: @comparison_project.experiment_specs)
      ],
      resources: [
        t('scrinium.resource'),
        render('resources/list', resources: @comparison_project.resources)
      ]
    }
  %>
<% end %>
