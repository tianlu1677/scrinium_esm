<% content_for :title, t('scrinium_esm.comparison_project') %>
<%
  add_breadcrumb t('scrinium_esm.comparison_project'),
  scrinium_esm.comparison_projects_path,
  on_nav_bar: true
%>

<% content_for :main_block do %>
  <%=
    render partial: 'scrinium_esm/comparison_projects/table_list',
    locals: { comparison_projects: ScriniumEsm::ComparisonProject.all }
  %>
  <% if is_super_admin?(current_user) %>
    <%=
      link_to t('action.add'),
      scrinium_esm.new_user_comparison_project_path(current_user),
      class: 'button float-right'
    %>
  <% end %>
<% end %>
