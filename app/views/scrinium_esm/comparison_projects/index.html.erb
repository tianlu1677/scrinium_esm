<% content_for :title, t('activerecord.models.scrinium_esm/comparison_project') %>
<%
  add_breadcrumb t('activerecord.models.scrinium_esm/comparison_project'),
  comparison_projects_path, on_nav_bar: true
%>

<% content_for :main_block do %>
  <%=
    render 'scrinium_esm/comparison_projects/table_list',
    comparison_projects: ScriniumEsm::ComparisonProject.all
  %>
  <% if policy(ScriniumEsm::ComparisonProject).create? %>
    <%= link_to t('action.add'), new_comparison_project_path, class: 'button float-right' %>
  <% end %>
<% end %>
