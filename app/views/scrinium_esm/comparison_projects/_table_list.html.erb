<table class='table table-striped'>
  <thead>
    <tr>
      <th width="100"><%= t('global.short_name') %></th>
      <th width="300"><%= t('global.name') %></th>
      <th width="100"><%= t('global.contact') %></th>
      <th width="200"><%= t('global.create_time') %></th>
    </tr>
  </thead>
  <tbody>
    <% comparison_projects.each do |project| %>
      <tr>
        <td>
          <%= link_to project.short_name, project %>
        </td>
        <td><%= project.name %></td>
        <td>
          <%= link_to project.contact.name, project.contact %>
        </td>
        <td><%= project.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
