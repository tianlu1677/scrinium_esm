<table class='table table-striped'>
  <thead>
    <tr>
      <th width="100"><%= t('activerecord.attributes.scrinium_esm/datum.name') %></th>
      <th width="300"><%= t('activerecord.attributes.scrinium_esm/datum.datum_type') %></th>
      <th width="200"><%= t('activerecord.attributes.scrinium_esm/datum.created_at') %></th>
    </tr>
  </thead>
  <tbody>
    <% data.each do |datum| %>
      <tr>
        <td>
          <%= link_to d.name, datum %>
        </td>
        <td><%= datum.datum_type %></td>
        <td><%= datum.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
