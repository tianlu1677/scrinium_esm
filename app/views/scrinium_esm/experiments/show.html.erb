<% content_for :title, @experiment.name %>
<% add_breadcrumb @experiment.name, experiment_path(@experiment) %>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <%=
    render 'layouts/navtab',
    tabs: {
      info: [
        t('global.info'),
        render('info')
      ],
      logs: [
        t('global.log'),
        render('logs')
      ],
      diagnostic_results: [
        t('scrinium_esm.diagnostic_result'),
        render('diagnostic_results')
      ],
      ensemble_members: [
        t('experiment.ensemble_member'),
        render('ensemble_members')
      ]
    }
  %>
<% end %>
