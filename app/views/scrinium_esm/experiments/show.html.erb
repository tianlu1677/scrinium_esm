<% content_for :title, @experiment.name %>
<% add_breadcrumb @experiment.name, experiment_path(@experiment) %>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <%=
    render 'layouts/navtab',
    tabs: {
      info: [
        t('experiment.tab.info'),
        render('info')
      ],
      logs: [
        t('experiment.tab.logs'),
        render('logs')
      ],
      diagnostic_results: [
        t('experiment.tab.diagnostic_results'),
        render('diagnostic_results')
      ],
      ensemble_members: [
        t('experiment.tab.ensemble_members'),
        render('ensemble_members')
      ]
    }
  %>
<% end %>
