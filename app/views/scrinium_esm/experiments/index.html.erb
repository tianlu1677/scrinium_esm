<% content_for :title, t('scrinium_esm.experiment') %>
<% add_breadcrumb t('scrinium_esm.experiment'), experiments_path %>

<% content_for :main_block do %>
  <%=
    render partial: 'table_list',
    locals: { experiments: ScriniumEsm::Experiment.all }
  %>
  <% if can? :create, ScriniumEsm::Experiment %>
    <%= link_to t('action.add'), new_user_experiment_path(current_user), class: 'button float-right' %>
  <% end %>
<% end %>
