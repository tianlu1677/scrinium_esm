<% content_for :title, t('scrinium_esm.metric') %>
<% add_breadcrumb t('scrinium_esm.metric'), metrics_path, on_nav_bar: true %>

<% content_for :main_block do %>
  <%= render 'scrinium_esm/metrics/table_list', metrics: ScriniumEsm::Metric.all %>
  <% if policy(ScriniumEsm::Metric).create? %>
    <%= link_to t('action.add'), new_metric_path, class: 'button float-right' %>
  <% end %>
<% end %>
