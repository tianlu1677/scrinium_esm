<% content_for :title, t('scrinium_esm.metric') %>

<% content_for :main do %>
  <%=
    render partial: 'scrinium_esm/metrics/table_list',
    locals: { metrics: ScriniumEsm::Metric.all }
  %>
  <% if is_super_admin?(current_user) %>
    <%= link_to t('action.add'), scrinium_esm.new_user_metric_path(current_user), class: 'button float-right' %>
  <% end %>
<% end %>
