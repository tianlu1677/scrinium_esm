<table class='table table-striped'>
  <thead>
    <tr>
      <th width="100"><%= t('global.short_name') %></th>
      <th width="300"><%= t('global.name') %></th>
      <th width="100"><%= t('global.contact') %></th>
      <th width="200"><%= t('global.create_time') %></th>
    </tr>
  </thead>
  <tbody>
    <% metrics.each do |metric| %>
      <tr>
        <td>
          <%= link_to metric.short_name, [ scrinium_esm, metric ] %>
        </td>
        <td><%= metric.name %></td>
        <td>
          <%= link_to metric.contact.name, [ main_app, metric.contact ] %>
        </td>
        <td><%= metric.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
