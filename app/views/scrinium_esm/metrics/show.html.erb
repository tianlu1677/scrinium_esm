<% content_for :title, @metric.short_name %>
<% add_breadcrumb @metric.short_name, [ scrinium_esm, @metric ] %>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <%=
    render 'layouts/navtab',
    tabs: {
      info: [
        t('tab.info'),
        render('info')
      ],
      resources: [
        t('activerecord.models.resource'),
        render('resources/list', resources: @metric.resources)
      ]
    }
  %>
<% end %>
