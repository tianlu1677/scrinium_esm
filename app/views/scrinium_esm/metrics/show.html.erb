<% content_for :title, @metric.short_name %>
<% add_breadcrumb @metric.short_name, @metric %>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <%=
    render 'layouts/navtab',
    tabs: {
      info: [
        t('global.info'),
        render('info')
      ],
      resources: [
        t('scrinium.resource'),
        render('resources/list', app: scrinium_esm, resources: @metric.resources)
      ]
    }
  %>
<% end %>
